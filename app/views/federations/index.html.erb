<div>
  <% if notice.present? %>
    <p><%= notice %></p>
  <% end %>

  <% content_for :title, "Federations" %>

  <div>
    <h1>Federations</h1>
    <p>
      <%= link_to "New federation", new_federation_path %>
    </p>
  </div>

  <div>
    <% @federations.each do |federation| %>
      <%= render federation %>
      <p>
        <%= link_to "Show this federation", federation %>
      </p>
    <% end %>
  </div>
</div>
