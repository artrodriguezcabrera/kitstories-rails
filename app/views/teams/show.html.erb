<!-- app/views/teams/show.html.erb -->

<h1>Team Details</h1>

<p>
  <strong>Name:</strong>
  <%= @team.name %>
</p>

<p>
  <strong>Country:</strong>
  <%= @team.country %>
</p>

<p>
  <strong>Federation:</strong>
  <%= @team.federation.name %>
</p>

<%= link_to 'Edit', edit_team_path(@team) %> |
<%= link_to 'Back to Teams', teams_path %> |
<div>
  <%= button_to "Delete this team", @team, method: :delete, data: { confirm: 'Are you sure?' } %>
</div>
